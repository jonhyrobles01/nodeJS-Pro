{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "outDir": "./cache",
    "rootDir": ".",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["*"],
      "@users/*": ["./users/*"],
      "@shared/*": ["./shared/*"],
      "@drivers/*": ["./drivers/*"]
    }
  },
  "exclude": ["node_modules", "cache", "dist", "reports"],
  "include": ["src/**/*.ts"]
}
